{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "http://example.com/example.json",
    "type": "object",
    "title": "The user schema",
    "description": "The user schema for registration and login",
    "default": {},
    "examples": [
        {
            "username": "santaIsReal",
            "email": "realSanta@gmail.com",
            "password": "AINCOléEINfcdlaEAFacsca123"
        }
    ],
    "required": [
        "username",
        "email",
        "password"
    ],
    "properties": {
        "username": {
            "$id": "#/properties/username",
            "type": "string",
            "title": "The username schema",
            "description": "Username can be used for login",
            "default": "",
            "examples": [
                "santaIsReal"
            ]
        },
        "email": {
            "$id": "#/properties/email",
            "type": "string",
            "title": "The email schema",
            "description": "Email of the user",
            "default": "",
            "examples": [
                "realSanta@gmail.com"
            ]
        },
        "password": {
            "$id": "#/properties/password",
            "type": "string",
            "title": "The password schema",
            "description": "Password given by the user",
            "default": "",
            "examples": [
                "AINCOléEINfcdlaEAFacsca123"
            ]
        }
    },
    "additionalProperties": false
}